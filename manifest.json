{
    "manifest_version": 2,
    "name": "LoremIpsum",
    "version": "0.1",
    "author": "Julien Bellue",
  
    "description": "Insert Lorem Ipsum from the context menu",
    "homepage_url":  "https://github.com/jbellue/loremIpsum-webext/",
  
    "permissions": [
        "storage",
        "contextMenus",
        "activeTab"
    ],
    "background": {
        "scripts": ["js/background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "all_frames": true,
            "js": ["js/main.js"]
        }
    ],
    "icons": {
        "16": "icons/icon-16.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    }
}
